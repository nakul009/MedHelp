<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nakuld.medhelp99.Register"
    android:background="@drawable/gradient">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/etname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="name"
        android:inputType="textPersonName"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etsurname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etname"
        android:layout_alignStart="@+id/etname"
        android:layout_below="@+id/etname"
        android:layout_marginTop="20dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="surname"
        android:inputType="textPersonName"
        android:layout_marginBottom="5dp"
        android:textSize="16dp"/>

    <EditText
        android:textSize="16dp"
        android:id="@+id/etemail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="90dp"
        android:ems="10"
        android:layout_alignLeft="@+id/etsurname"
        android:layout_alignStart="@+id/etsurname"
        android:layout_below="@+id/etsurname"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="#11000000"
        android:inputType="textEmailAddress"
        android:hint="email"/>

    <EditText
        android:textSize="16dp"
        android:id="@+id/etusername"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etemail"
        android:layout_alignStart="@+id/etemail"
        android:layout_below="@+id/etemail"
        android:layout_marginTop="20dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="username"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="90dp"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:textSize="16dp"
        android:id="@+id/etpassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etusername"
        android:layout_alignStart="@+id/etusername"
        android:layout_below="@+id/etusername"
        android:hint="password"
        android:ems="10"
        android:background="#11000000"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"/>

    <Button

        android:id="@+id/btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView"
        android:text="register"
        android:textSize="16dp"
        android:onClick="OnReg"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="359dp"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/cetpassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etpassword"
        android:layout_alignStart="@+id/etpassword"
        android:layout_below="@+id/etpassword"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="#11000000"
        android:hint="confirm Password"
        android:textSize="16dp"/>
</RelativeLayout>