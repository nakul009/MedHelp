<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.nakuld.medhelp99.LogIn">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-64dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:textSize="16dp" />
    android:layout_alignLeft="@+id/etPassword"
    android:layout_alignStart="@+id/etPassword" />

    <EditText
        android:textSize="16dp"
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/etUserName"
        android:layout_alignStart="@+id/etUserName"
        android:layout_below="@+id/etUserName"
        android:layout_marginTop="38dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_alignStart="@+id/etPassword"
        android:layout_below="@+id/etPassword"
        android:layout_marginLeft="63dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="17dp"
        android:onClick="OnLogin"
        android:text="LOGIN"
        tools:layout_editor_absoluteX="123dp"
        tools:layout_editor_absoluteY="247dp"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_below="@+id/btnLogin"
        android:layout_marginTop="17dp"
        android:text="register"
        android:onClick="OpenReg"/>

    <Button
        android:id="@+id/btn_reg_for_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_below="@+id/btn_reg"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="17dp"
        android:text="Doctor Registeration"
        android:onClick="OpenRegfordoc"/>

    <Button
        android:id="@+id/btn_login_for_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_below="@+id/btn_reg_for_doc"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="17dp"
        android:text="Doctor LogIn"
        android:onClick="OpenLogInfordoc"/>

</RelativeLayout>