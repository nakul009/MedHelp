<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.nakuld.medhelp99.LogInForDoc">

        <EditText
            android:id="@+id/etUserNamefordoc"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:background="#11000000"
            android:ems="10"
            android:hint="username"
            android:inputType="textPersonName"
            android:textSize="16dp" />
        android:layout_alignLeft="@+id/etPasswordfordoc"
        android:layout_alignStart="@+id/etPasswordfordoc" />

        <EditText
            android:textSize="16dp"
            android:id="@+id/etPasswordfordoc"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/etUserNamefordoc"
            android:layout_alignStart="@+id/etUserNamefordoc"
            android:layout_below="@+id/etUserNamefordoc"
            android:layout_marginTop="38dp"
            android:background="#11000000"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnLoginfordoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etPasswordfordoc"
            android:layout_alignStart="@+id/etPasswordfordoc"
            android:layout_below="@+id/etPasswordfordoc"
            android:layout_marginLeft="63dp"
            android:layout_marginStart="63dp"
            android:layout_marginTop="37dp"
            android:onClick="OnLogin"
            android:text="LOGIN"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="247dp"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btn_regfordoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btnLoginfordoc"
            android:layout_alignStart="@+id/btnLoginfordoc"
            android:layout_below="@+id/btnLoginfordoc"
            android:layout_marginTop="37dp"
            android:text="Register For Doc"
            android:onClick="OpenReg"/>
</RelativeLayout>